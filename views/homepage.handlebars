<ol class="post-list">
  <li>
    <article class="post">
      <div class="title">
        <a href="{{post_body}}" target="_blank">{{title}}</a>
        <span>({{post_body}})</span>
      </div>
      <div class="meta">
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
</ol>