<ol class="post-list">
    {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <h3>{{title}}</h3>
        <span>({{post_body}})</span>
      </div>
      <div class="meta">
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>